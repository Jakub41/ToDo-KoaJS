{
    "compileOnSave": false,
    "compilerOptions": {
        "noImplicitAny": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "lib": [
          "es5", "es6", "esnext", "dom"
        ],
        "target": "es5",
        "types": [
            "node"
        ],
        "sourceMap": true,
        "baseUrl": "./src",
        "outDir": "./build"
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
